// Place your settings in this file to overwrite the default settings
{
  // Editor
  "editor.fontFamily": "Dank Mono, Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.lineHeight": 32,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.scrollBeyondLastLine": false,
  "editor.minimap.enabled": false,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.smoothScrolling": true,
  "editor.renderLineHighlight": "all",
  "editor.snippetSuggestions": "top",
  // Emmet
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.preferences": {
    "bem.elementSeparator": "__",
    "bem.modifierSeparator": "--"
  },
  // Workbench
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": null,
  "workbench.editor.tabSizing": "shrink",
  "workbench.statusBar.feedback.visible": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Gatito Theme",
  "workbench.editor.showIcons": false,
  "workbench.tree.indent": 20,
  "workbench.tree.horizontalScrolling": true,
  // Window
  "window.newWindowDimensions": "maximized",
  "window.title": "${activeEditorMedium} ${dirty}",
  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/_site": true,
    "**/.sass-cache": true,
    ".nyc_output": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  // Search
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "search.exclude": {
    "**/*/__snapshots__": true
  },
  "search.location": "panel",
  // Zen mode
  "zenMode.hideTabs": false,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  // Markdown
  "markdown.preview.fontSize": 16,
  "markdown.preview.lineHeight": 2,
  // Extensions
  "extensions.ignoreRecommendations": true,
  // Integrated terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 2,
  "terminal.integrated.cursorStyle": "line",
  "terminal.external.osxExec": "Hyper.app",
  // Git
  "git.enableSmartCommit": true,
  // Lang specific settings
  "[markdown]": {
    "editor.lineNumbers": "off",
    "editor.wordWrap": "bounded",
    "files.trimTrailingWhitespace": false
  },
  // npm
  "npm.enableScriptExplorer": true,
  // ESlint
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "explorer.openEditors.visible": 0,
  // Debug
  "debug.inlineValues": true,
  // Prettier
  "prettier.disableLanguages": [
    "markdown"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
